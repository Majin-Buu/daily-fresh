	</sql>

    <select id="findUserByAccount" parameterType="java.lang.String" resultMap="BaseResultMap">
        select

        <include refid="Base_Column_List"/>

        FROM pc_uac_user

        where user_name = #{userAccount}

        or mobile_no = #{userAccount}

        or email = #{userAccount}

    </select>

